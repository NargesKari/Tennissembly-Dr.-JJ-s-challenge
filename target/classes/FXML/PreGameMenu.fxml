<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PregameMenuController">
    <top>
        <HBox layoutX="15.0" layoutY="15.0">
        <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="15.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true" fx:id="music"/>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="10">
            <Label alignment="CENTER" text="Choose your way! :)" textAlignment="CENTER" textFill="00A87E">
                <font>
                    <Font name="Comic Sans MS" size="25.0" />
                </font>
                <effect>
                    <DropShadow blurType="ONE_PASS_BOX" spread="0.88" />
                </effect>
            </Label>
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="90" fitWidth="90">
                        <Image url="@../IMAGES/racket1.jpg" />
                    </ImageView>
                    <CheckBox fx:id="checkBox1" text="Two-player" />
                </HBox>

                <HBox alignment="CENTER" spacing="10">
                    <CheckBox fx:id="checkBox2" text="Play with computer" />
                    <ImageView fitHeight="90" fitWidth="90">
                        <Image url="@../IMAGES/racket2.jpg" />
                    </ImageView>
                </HBox>

                <HBox alignment="CENTER" spacing="10">
                    <ImageView fitHeight="90" fitWidth="90">
                        <Image url="@../IMAGES/racket3.jpg" />
                    </ImageView>
                    <CheckBox fx:id="checkBox3" text="practice" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Select the required score to win " textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font name="Comic Sans MS Bold" size="19.0" />
                        </font>
                  <effect>
                     <DropShadow height="21.13" radius="11.705" width="27.69">
                        <color>
                           <Color green="0.658823549747467" blue="0.4941176474094391" />
                        </color></DropShadow>
                  </effect>
                    </Label>
                    <Spinner fx:id="spinner" prefHeight="25.0" prefWidth="60.0"/>


                </HBox>
            </VBox>

            <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#startGame" prefHeight="140.0" prefWidth="138.0" text="START">
                <font>
                    <Font name="ROGFonts-Regular" size="12.0" />
                </font>
            </Button>
            <effect>
                <DropShadow height="23.55" radius="11.365" spread="0.3" width="23.91" />
            </effect>

        </VBox>
    </center>
</BorderPane>
